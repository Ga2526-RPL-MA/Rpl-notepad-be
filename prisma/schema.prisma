generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  nrp         String     @unique
  email       String
  password    String
  role        String     @default("user")
  classes     UserClasses[]
  tasks       Task[]
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id          Int      @id @default(autoincrement())
  token       String   @unique
  userId      Int
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Class {
  id          Int      @id @default(autoincrement())
  name        String
  lecturer    String
  timetable   DateTime
  room        String
  students    UserClasses[]
  tasks       Task[]
  issue       Issue[]
}

model UserClasses {
  id          Int     @id @default(autoincrement())
  userId      Int
  classId     Int
  class       Class   @relation(fields: [classId], references: [id])
  user        User    @relation(fields: [userId], references: [id])
  @@unique([userId, classId])
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime
  status      String   @default("ongoing")
  userId      Int
  classId     Int
  user        User     @relation(fields: [userId], references: [id])
  class       Class    @relation(fields: [classId], references: [id])
}

model Issue {
  id          Int      @id @default(autoincrement())
  userName    String
  content     String
  reportedAt  DateTime @default(now())
  classId     Int
  class       Class    @relation(fields: [classId], references: [id])
  answers     Answer[]
}

model Answer {
  id          Int      @id @default(autoincrement())
  userName    String
  content     String
  answeredAt  DateTime @default(now())
  issueId     Int
  subAnswers  SubAnswer[]
  issue       Issue    @relation(fields: [issueId], references: [id])
}

model SubAnswer {
  id          Int      @id @default(autoincrement())
  userName    String
  content     String
  answeredAt  DateTime @default(now())
  answerId    Int
  answer      Answer   @relation(fields: [answerId], references: [id])
}