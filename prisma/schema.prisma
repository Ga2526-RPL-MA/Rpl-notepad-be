generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  nrp           String         @unique
  email         String
  password      String
  role          String         @default("user")
  tasks         Task[]
  classes       UserClasses[]
}

model Class {
  id        Int           @id @default(autoincrement())
  name      String
  lecturer  String
  timetable String
  room      String
  issue     Issue[]
  tasks     Task[]
  students  UserClasses[]
  weeks     Week[]
}

model UserClasses {
  id      Int   @id @default(autoincrement())
  userId  Int
  classId Int
  class   Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, classId])
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime?
  status      String    @default("ongoing")
  userId      Int
  classId     Int
  class       Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Issue {
  id         Int      @id @default(autoincrement())
  userName   String
  content    String
  reportedAt DateTime @default(now())
  classId    Int
  answers    Answer[]
  class      Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model Answer {
  id         Int         @id @default(autoincrement())
  userName   String
  content    String
  answeredAt DateTime    @default(now())
  issueId    Int
  subAnswers SubAnswer[]
  issue      Issue       @relation(fields: [issueId], references: [id], onDelete: Cascade)
}

model SubAnswer {
  id         Int      @id @default(autoincrement())
  userName   String
  content    String
  answeredAt DateTime @default(now())
  answerId   Int
  answer     Answer   @relation(fields: [answerId], references: [id], onDelete: Cascade)
}

model Week {
  id      Int    @id @default(autoincrement())
  week    Int
  classId Int
  class   Class  @relation(fields: [classId], references: [id], onDelete: Cascade)
  notes   Note[]
}

model Note {
  id        Int        @id @default(autoincrement())
  userName  String?
  content   String?
  weekId    Int
  week      Week       @relation(fields: [weekId], references: [id], onDelete: Cascade)
  noteFiles NoteFile[]
}

model NoteFile {
  id       Int     @id @default(autoincrement())
  filePath String?
  noteId   Int
  note     Note    @relation(fields: [noteId], references: [id], onDelete: Cascade)
}
